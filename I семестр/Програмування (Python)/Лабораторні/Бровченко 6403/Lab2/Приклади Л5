else: print(x, end=" "); print("- непарне число")

#ex6
x = int (input ( "Введіть число: ") )
if x % 2 == 0:
    print(x, end=" ")
    print ( "- парне число")
else:
    print(x, end=" ")
    print("- непарне число")

#ex7
numvar = int(input("Write the number: "))
if numvar < 20 and numvar % 2 == 0:
    print("This is an even number")
    print("floor by 3 = ",numvar // 3)
    print("second_power = ",numvar**2)
elif numvar < 20 and numvar % 2 !=0:
    print("This is an odd number")
    print("floor by 4 = ",numvar // 4)
    print("3hd power = ",numvar**3)
else:
    print ("Your number is greater than 20")

#ex8
print("""Якою операційною системою ви
користуєтесь?
1 - Windows 10
2 - Windows 8
3 - Windows 7
4 - Windows ХР
5 - Інша""")
os = input("Введіть відповідне число: ")
if os == "1":
    print("Ви вибрали: Windows 10")
elif os == "2":
    print("Ви вибрали: Windows 8")
elif os == "3":
    print("Ви вибрали: Windows 7")
elif os == "4":
    print("Ви вибрали: Windows XP")
elif os == "5":
    print("Ви вибрали: інша")
elif not os:
    print("Ви не ввели число")
else:
    print("Ми не визначили вашу операційну систему")

#ex9
print("""Якою операційною системою ви
користуєтесь?
1 - Windows 10
2 - Windows 8
З - Windows 7
4 - Windows ХР
5 - Інша""")
os = input("Введіть відповідне число: ")
if os != "":
    if os == "1":
        print("Ви вибрали: Windows 10")
    elif os == "2":
        print("Bи вибрали: Windows 8")
    elif os == "3":
        print("Bи вибрали: Windows 7")
    elif os == "4":
        print ( "Ви вибрали: Windows XP")
    elif os == "5":
        print("Ви вибрали: інша")
    else:
        print("Ми не визначили вашу операційну систему")
else:
    print("Bи не ввели число")

#ex10
print("""Якою операційною системою вы користуєтесь?
1 - Windows 10
2 - Windows 8
З - Windows 7
4 - Windows ХР
5 - Інша""")
os = input("Введіть відповідне число: ")
if not os:
    print("Bи не ввели число")
else:
    if os == "1":
        print("Ви вибрали: Windows 10")
    else:
        if os == "2":
            print("Bи вибрали: Windows 8")
        else:
            if os == "3":
                print("Bи вибрали: Windows 7")
            else:
                if os == "4":
                    print ( "Ви вибрали: Windows XP")
                else:
                    if os == "5":
                        print("Ви вибрали: інша")

