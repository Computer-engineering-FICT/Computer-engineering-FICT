    i -= 1

#ex30
arr = [1, 2, 3]
i, count = 0, len(arr)
while i < count:
    arr[i] *= 2
    i += 1
print(arr)

#ex31
for i in range(1, 101):
    if 4 < i < 11:
        continue
    print(i)

#ex32
i = 1
while True:
    if i > 100: break
    print(i)
    i += 1

#ex33
print("Введіть слово 'stop' для одержання результату")
s = 0
while True:
    x = input("Введіть число: ")
    if x == "stop":
        break
    y = int(x)
    s += y
print("Cyмa чисел дорівнює:", s)
