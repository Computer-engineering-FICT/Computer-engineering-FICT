program Laba7_4;

{$APPTYPE CONSOLE}

type
  TSinusFunc = function (x,e: real): real;

var
  x,e: real;

function sinus (x,e: real): real;
var
  a,p,S: real;
  j,n: integer;
begin
  S := x;
  j := 3;
  p := x;
  a := sqr(x);
  while abs(p)> e do
    begin
      p := -(p*a)/(j*(j-1));
      S := S+p;
      j := j+2;
    end;
   sinus := S;
end;

function Writeln(x,e: real; g: TSinusFunc): real;
begin
  write('input x=');
  readln(x);
  write('input e=');
  readln(e);
  system.writeln(g(x,e):2:5);
end;

begin
  Writeln(x,e,@sinus);
  readln;
end.

