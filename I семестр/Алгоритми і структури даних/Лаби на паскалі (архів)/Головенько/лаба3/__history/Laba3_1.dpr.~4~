program Laba3_1;

{$APPTYPE CONSOLE}
 var
 x, e, z, n, p, pi, S : real;
 i : integer;
begin
  writeln('Вычисления в градусах(1) или радианах(2)');
  read(i);
  writeln ('Ввод x');
  write('x=');
  read (x);
  writeln('Ввод e');
  write('e=');
  read(e);
  pi := 3.14;
  if i=1
    then
      x:=(x/180)*pi;
      z:=abs(x);
      while z>=2*pi do
        begin
          z:=z-2*pi;
        end;

    p:=z;
    S:=z;
    n:=1;
    i:=3;
  repeat
    begin
      p:=-(p*z*z)/(i*(i-1));
      S:=S+p;
      i:=i+2;
      n:=n+1
    end;
  until abs(p) <= e;
    writeln ('S= ',S);
    writeln ('Количество слагаемых=', n );
readln;
 end.

