program laba2;

{$APPTYPE CONSOLE}

var
   x: real;
   y: integer;
   S: real;
   q: integer;
   i: integer;
begin
  write('Введите значение переменной x: ');
  readln(x);
  write('Введите значение переменной y: ');
  readln(y);
  if x=0
    then
      if y>0
        then
          begin
            S := 0;
            writeln('Переменная y может быть любым положительным числом S=',S:0:8);
          end
        else
          writeln('Не правильно введены данные')
    else
      begin
        S := 1;
        for i := 1 to abs(y) do
          if y < 0
            then
              S := S*(1/x)
            else
              S := S*x;
        writeln('S=', S:0:8);
      end;
  readln;
end.
