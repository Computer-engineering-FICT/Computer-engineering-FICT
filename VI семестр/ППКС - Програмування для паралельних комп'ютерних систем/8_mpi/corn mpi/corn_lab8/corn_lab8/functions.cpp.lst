3.  int maxValue(
4.     const Matrix &MO,
5.     size_t start,
6.     size_t end)
7.  {
8.     int result = INT_MIN;
9.     for(size_t i = start; i < end; i++) {
10.        for(size_t j = 0; j < MO.cols; j++) {
11.          int x = MO.get(i, j);
12.          if(x > result) {
13.             result = x;
14.          }
15.       }
16.    }
17.    return result;
18. }
